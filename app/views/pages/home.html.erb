<h1>WORKERS<span class="highlight">CUSTOMERS</span></h1>

<% if current_user %>
  <b>Hello <%= current_user.name %>.</b>
  <%= link_to 'Logout', logout_path %>
<% else %>
  <%= link_to 'Signup', signup_path %>
  <%= link_to 'Login', login_path %>
<% end %>

<% if current_user %>
<div>
  <div class="pull-left">
    <%= text_field_tag 'search', '', placeholder: 'type to search skills...' %>
    <div id="results"></div>
  </div>

  <div id="picks-box" class="pull-left">
    <span id="pick-actions" class="hide">
    <%= link_to 'Search', '#', id: 'search-button' %>
    Your picks: </span><span id="picks"></span>
  </div>
</div>
<% else %>
  <p>Let's say you need to login to start using.</p>
<% end %>